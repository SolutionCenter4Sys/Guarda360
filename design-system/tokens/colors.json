{
  "$schema": "https://design-tokens.github.io/community-group/format/",
  "$description": "Guarda360° Design System v1.0 — Color Tokens (3 níveis: Global → Alias → Component)",

  "color": {

    "global": {
      "$description": "Nível 1: Valores brutos da paleta. Não usar diretamente nos componentes.",

      "blue": {
        "50":  { "$value": "#EFF6FF", "$type": "color" },
        "100": { "$value": "#DBEAFE", "$type": "color" },
        "200": { "$value": "#BFDBFE", "$type": "color" },
        "300": { "$value": "#93C5FD", "$type": "color" },
        "400": { "$value": "#2563EB", "$type": "color" },
        "500": { "$value": "#1D4ED8", "$type": "color", "$description": "Brand Primary — WCAG AAA 9.3:1 on white" },
        "600": { "$value": "#1E40AF", "$type": "color" },
        "700": { "$value": "#1E3A8A", "$type": "color" },
        "800": { "$value": "#172554", "$type": "color" },
        "900": { "$value": "#0F1B3D", "$type": "color" }
      },

      "slate": {
        "50":  { "$value": "#F8FAFC", "$type": "color" },
        "100": { "$value": "#F1F5F9", "$type": "color" },
        "200": { "$value": "#E2E8F0", "$type": "color" },
        "300": { "$value": "#CBD5E1", "$type": "color" },
        "400": { "$value": "#94A3B8", "$type": "color" },
        "500": { "$value": "#64748B", "$type": "color" },
        "600": { "$value": "#475569", "$type": "color" },
        "700": { "$value": "#374151", "$type": "color" },
        "800": { "$value": "#1E293B", "$type": "color" },
        "900": { "$value": "#0F172A", "$type": "color" }
      },

      "green": {
        "600": { "$value": "#16A34A", "$type": "color" },
        "700": { "$value": "#15803D", "$type": "color" }
      },
      "amber": {
        "600": { "$value": "#D97706", "$type": "color" },
        "700": { "$value": "#B45309", "$type": "color" }
      },
      "red": {
        "600": { "$value": "#DC2626", "$type": "color" },
        "700": { "$value": "#B91C1C", "$type": "color" }
      },
      "violet": {
        "600": { "$value": "#7C3AED", "$type": "color" },
        "700": { "$value": "#6D28D9", "$type": "color" }
      },
      "pink": {
        "600": { "$value": "#DB2777", "$type": "color" }
      },
      "sky": {
        "500": { "$value": "#0EA5E9", "$type": "color" }
      },
      "white": { "$value": "#FFFFFF", "$type": "color" }
    },

    "alias": {
      "$description": "Nível 2: Tokens semânticos — referenciam global tokens com significado.",

      "primary":        { "$value": "{color.global.blue.500}", "$type": "color" },
      "primary-hover":  { "$value": "{color.global.blue.400}", "$type": "color" },
      "primary-active": { "$value": "{color.global.blue.600}", "$type": "color" },
      "primary-muted":  { "$value": "rgba(29,78,216,0.08)",    "$type": "color" },
      "primary-border": { "$value": "rgba(29,78,216,0.25)",    "$type": "color" },
      "on-primary":     { "$value": "{color.global.white}",    "$type": "color" },

      "bg":           { "$value": "{color.global.slate.50}",  "$type": "color" },
      "surface":      { "$value": "{color.global.white}",     "$type": "color" },
      "surface-alt":  { "$value": "{color.global.slate.100}", "$type": "color" },
      "border":       { "$value": "{color.global.slate.200}", "$type": "color" },
      "border-dark":  { "$value": "{color.global.slate.300}", "$type": "color" },
      "border-focus": { "$value": "{color.global.blue.500}",  "$type": "color" },

      "text-primary":   { "$value": "{color.global.slate.900}", "$type": "color" },
      "text-secondary": { "$value": "{color.global.slate.700}", "$type": "color" },
      "text-tertiary":  { "$value": "{color.global.slate.500}", "$type": "color" },
      "text-disabled":  { "$value": "{color.global.slate.400}", "$type": "color" },
      "text-accent":    { "$value": "{color.global.blue.500}",  "$type": "color" },
      "text-inverse":   { "$value": "{color.global.white}",     "$type": "color" },

      "success": { "$value": "{color.global.green.600}",  "$type": "color" },
      "warning": { "$value": "{color.global.amber.600}",  "$type": "color" },
      "error":   { "$value": "{color.global.red.600}",    "$type": "color" },
      "info":    { "$value": "{color.global.sky.500}",    "$type": "color" }
    },

    "domain": {
      "$description": "Nível 2 (domínio): Cores específicas do negócio de Guarda Compartilhada.",

      "guardian-a":           { "$value": "{color.global.blue.400}",  "$type": "color", "$description": "Responsável 1" },
      "guardian-a-bg":        { "$value": "{color.global.blue.50}",   "$type": "color" },
      "guardian-a-border":    { "$value": "rgba(37,99,235,0.30)",     "$type": "color" },
      "guardian-b":           { "$value": "{color.global.pink.600}",  "$type": "color", "$description": "Responsável 2" },
      "guardian-b-bg":        { "$value": "rgba(219,39,119,0.08)",    "$type": "color" },
      "guardian-b-border":    { "$value": "rgba(219,39,119,0.30)",    "$type": "color" },
      "guardian-shared":      { "$value": "{color.global.violet.600}","$type": "color", "$description": "Dias compartilhados" },
      "guardian-shared-bg":   { "$value": "rgba(124,58,237,0.08)",    "$type": "color" },

      "confirmado":        { "$value": "{color.global.green.600}",    "$type": "color" },
      "confirmado-bg":     { "$value": "rgba(22,163,74,0.08)",        "$type": "color" },
      "confirmado-border": { "$value": "rgba(22,163,74,0.25)",        "$type": "color" },
      "pendente":          { "$value": "{color.global.amber.600}",    "$type": "color" },
      "pendente-bg":       { "$value": "rgba(217,119,6,0.08)",        "$type": "color" },
      "pendente-border":   { "$value": "rgba(217,119,6,0.25)",        "$type": "color" },
      "cancelado":         { "$value": "{color.global.red.600}",      "$type": "color" },
      "cancelado-bg":      { "$value": "rgba(220,38,38,0.08)",        "$type": "color" },
      "cancelado-border":  { "$value": "rgba(220,38,38,0.25)",        "$type": "color" },

      "severity-low":              { "$value": "{color.global.green.600}",  "$type": "color" },
      "severity-low-bg":           { "$value": "rgba(22,163,74,0.08)",      "$type": "color" },
      "severity-low-border":       { "$value": "rgba(22,163,74,0.25)",      "$type": "color" },
      "severity-medium":           { "$value": "{color.global.amber.600}",  "$type": "color" },
      "severity-medium-bg":        { "$value": "rgba(217,119,6,0.08)",      "$type": "color" },
      "severity-medium-border":    { "$value": "rgba(217,119,6,0.25)",      "$type": "color" },
      "severity-high":             { "$value": "{color.global.red.600}",    "$type": "color" },
      "severity-high-bg":          { "$value": "rgba(220,38,38,0.08)",      "$type": "color" },
      "severity-high-border":      { "$value": "rgba(220,38,38,0.25)",      "$type": "color" },
      "severity-critical":         { "$value": "{color.global.violet.600}", "$type": "color", "$description": "Alienação Parental — WCAG 7.4:1" },
      "severity-critical-bg":      { "$value": "rgba(124,58,237,0.08)",     "$type": "color" },
      "severity-critical-border":  { "$value": "rgba(124,58,237,0.30)",     "$type": "color" },

      "hash-valid":        { "$value": "{color.global.sky.500}",       "$type": "color" },
      "hash-valid-bg":     { "$value": "rgba(14,165,233,0.08)",        "$type": "color" },
      "hash-valid-border": { "$value": "rgba(14,165,233,0.25)",        "$type": "color" }
    },

    "component": {
      "$description": "Nível 3: Tokens específicos de componentes — referenciam alias tokens.",

      "button-primary-bg":      { "$value": "{color.alias.primary}",        "$type": "color" },
      "button-primary-bg-hover":{ "$value": "{color.alias.primary-hover}",  "$type": "color" },
      "button-primary-text":    { "$value": "{color.alias.on-primary}",     "$type": "color" },
      "button-secondary-bg":    { "$value": "transparent",                  "$type": "color" },
      "button-secondary-text":  { "$value": "{color.alias.primary}",        "$type": "color" },
      "button-secondary-border":{ "$value": "{color.alias.primary-border}", "$type": "color" },

      "input-bg":           { "$value": "{color.alias.surface}",     "$type": "color" },
      "input-border":       { "$value": "{color.alias.border}",      "$type": "color" },
      "input-border-focus": { "$value": "{color.alias.border-focus}","$type": "color" },
      "input-text":         { "$value": "{color.alias.text-primary}", "$type": "color" },
      "input-placeholder":  { "$value": "{color.alias.text-disabled}","$type": "color" },

      "nav-item-active-bg":   { "$value": "{color.alias.primary-muted}","$type": "color" },
      "nav-item-active-text": { "$value": "{color.alias.primary}",      "$type": "color" }
    }
  }
}
