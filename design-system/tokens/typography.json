{
  "$schema": "https://design-tokens.github.io/community-group/format/",
  "$description": "Guarda360° Design System v1.0 — Typography Tokens",

  "font-family": {
    "sans": {
      "$value": "'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif",
      "$type": "fontFamily",
      "$description": "Fonte primária — alinhada ao Foursys Design Toolkit"
    },
    "mono": {
      "$value": "'JetBrains Mono', 'Courier New', monospace",
      "$type": "fontFamily",
      "$description": "Fonte monospace — hashes SHA-256, timestamps, códigos"
    }
  },

  "font-size": {
    "$description": "Escala tipográfica — Major Third ratio (1.250)",
    "xs":   { "$value": "0.75rem",  "$type": "dimension", "$description": "12px — captions, labels, timestamps" },
    "sm":   { "$value": "0.875rem", "$type": "dimension", "$description": "14px — body small, botões" },
    "base": { "$value": "1rem",     "$type": "dimension", "$description": "16px — corpo padrão" },
    "lg":   { "$value": "1.125rem", "$type": "dimension", "$description": "18px — destaques suaves" },
    "xl":   { "$value": "1.25rem",  "$type": "dimension", "$description": "20px — h4 subtítulos" },
    "2xl":  { "$value": "1.5rem",   "$type": "dimension", "$description": "24px — h3 seções" },
    "3xl":  { "$value": "1.875rem", "$type": "dimension", "$description": "30px — h2 páginas" },
    "4xl":  { "$value": "2.25rem",  "$type": "dimension", "$description": "36px — h1 heroes" },
    "hero": { "$value": "3rem",     "$type": "dimension", "$description": "48px — KPI numbers (extrabold)" }
  },

  "font-weight": {
    "regular":   { "$value": "400", "$type": "fontWeight" },
    "medium":    { "$value": "500", "$type": "fontWeight" },
    "semibold":  { "$value": "600", "$type": "fontWeight" },
    "bold":      { "$value": "700", "$type": "fontWeight" },
    "extrabold": { "$value": "800", "$type": "fontWeight" }
  },

  "line-height": {
    "tight":   { "$value": "1.25", "$type": "number", "$description": "Headings" },
    "normal":  { "$value": "1.5",  "$type": "number", "$description": "Body text" },
    "relaxed": { "$value": "1.75", "$type": "number", "$description": "Textos legais, termos" }
  },

  "letter-spacing": {
    "wide":  { "$value": "0.04em", "$type": "dimension", "$description": "Labels uppercase" },
    "wider": { "$value": "0.06em", "$type": "dimension" }
  },

  "typography": {
    "$description": "Hierarquia semântica — usar estas composições nos componentes",

    "hero": {
      "$description": "KPI numbers, métricas principais",
      "font-size":      { "$value": "{font-size.hero}" },
      "font-weight":    { "$value": "{font-weight.extrabold}" },
      "line-height":    { "$value": "{line-height.tight}" },
      "letter-spacing": { "$value": "-0.01em" }
    },
    "h1": {
      "$description": "Títulos de página principais",
      "font-size":      { "$value": "{font-size.4xl}" },
      "font-weight":    { "$value": "{font-weight.bold}" },
      "line-height":    { "$value": "{line-height.tight}" },
      "letter-spacing": { "$value": "-0.01em" }
    },
    "h2": {
      "$description": "Títulos de seção",
      "font-size":      { "$value": "{font-size.3xl}" },
      "font-weight":    { "$value": "{font-weight.bold}" },
      "line-height":    { "$value": "{line-height.tight}" }
    },
    "h3": {
      "$description": "Subtítulos de card/modal",
      "font-size":      { "$value": "{font-size.2xl}" },
      "font-weight":    { "$value": "{font-weight.semibold}" },
      "line-height":    { "$value": "1.3" }
    },
    "h4": {
      "$description": "Labels de seção, cabeçalhos de card",
      "font-size":      { "$value": "{font-size.xl}" },
      "font-weight":    { "$value": "{font-weight.semibold}" },
      "line-height":    { "$value": "1.4" }
    },
    "body": {
      "$description": "Texto corrido padrão",
      "font-size":   { "$value": "{font-size.base}" },
      "font-weight": { "$value": "{font-weight.regular}" },
      "line-height": { "$value": "{line-height.normal}" }
    },
    "body-sm": {
      "$description": "Texto menor — botões, inputs",
      "font-size":   { "$value": "{font-size.sm}" },
      "font-weight": { "$value": "{font-weight.regular}" },
      "line-height": { "$value": "{line-height.normal}" }
    },
    "label": {
      "$description": "Labels uppercase — seções, campos de formulário",
      "font-size":      { "$value": "{font-size.xs}" },
      "font-weight":    { "$value": "{font-weight.medium}" },
      "text-transform": { "$value": "uppercase" },
      "letter-spacing": { "$value": "{letter-spacing.wide}" }
    },
    "caption": {
      "$description": "Texto auxiliar — datas, metadados",
      "font-size":   { "$value": "{font-size.xs}" },
      "font-weight": { "$value": "{font-weight.regular}" },
      "line-height": { "$value": "1.4" }
    },
    "hash": {
      "$description": "Hashes SHA-256, códigos técnicos — fonte mono",
      "font-family":    { "$value": "{font-family.mono}" },
      "font-size":      { "$value": "{font-size.xs}" },
      "font-weight":    { "$value": "{font-weight.medium}" },
      "letter-spacing": { "$value": "0.02em" }
    },
    "timestamp": {
      "$description": "Timestamps, datas técnicas — fonte mono",
      "font-family": { "$value": "{font-family.mono}" },
      "font-size":   { "$value": "{font-size.xs}" }
    },
    "legal": {
      "$description": "Termos legais, contratos de guarda",
      "font-size":   { "$value": "{font-size.base}" },
      "line-height": { "$value": "{line-height.relaxed}" }
    }
  }
}
